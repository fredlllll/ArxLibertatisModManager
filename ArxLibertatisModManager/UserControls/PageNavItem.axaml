<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100" Height="100"
             x:Class="ArxLibertatisModManager.UserControls.PageNavItem">
  <Border BorderBrush="Black" BorderThickness="0 1">
    <Button Width="302" Margin="-1" Padding="0" Name="BtnButton" Command="{Binding CallCommand}">
      <StackPanel Orientation="Horizontal" Height="98" Background="#85cacc">
        <Image Margin="10" Width="80" Height="80" Source="/Assets/gear.png" />
        <Label Name="LblTitle" VerticalAlignment="Center" FontSize="20" Content="{Binding Title}" />
      </StackPanel>
    </Button>
  </Border>
</UserControl>
